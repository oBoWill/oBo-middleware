  "bindings": {},
  "sections": [
    {
      "columnSize": {
        "s": {
          "size": 24
        }
      },
      "bindings": [
        {
          "field": "description",
          "disposition": {
            "field": "TEXT_A"
          }
        }
      ]
    },
    {
      "title": "Additional Info",
      "columnSize": {
        "s": {
          "size": 24
        },
        "m": {
          "size": 12
        }
      },
      "bindings": [
        "status"
      ]
    },
    {
